int laser = 12;

int yellow = 8;
int black = 10;
int orange = 11;
int brown = 9;

int delayLaser = 15;
int delayMotor = 20;
int delayLaserOff = 5;

int x = 0;

int sensor1 = A0;
int sensor2 = A1;
int sensor3 = A2;
int sensor4 = A3;

int speak = 3;

int note1 = 50;
int note2 = 100;
int note3 = 200;
int note4 = 250;


void setup() {
  pinMode(yellow, OUTPUT);
  pinMode(black, OUTPUT);
  pinMode(orange, OUTPUT);
  pinMode(brown, OUTPUT);

  pinMode(laser, OUTPUT);
  
  pinMode(speak, OUTPUT);

  Serial.begin(9600);

  digitalWrite(laser, HIGH);

}

void loop() {
  digitalWrite(yellow, HIGH);
  digitalWrite(black, LOW);
  digitalWrite(orange, LOW);
  digitalWrite(brown, LOW);

  delay(delayMotor);

  digitalWrite(laser, HIGH);

  delay(delayLaser);

  while (analogRead(sensor1) <= 500) {
    analogWrite(speak, note1);
    Serial.println("1 ON");
    Serial.println(analogRead(sensor1));
  }
    analogWrite(speak, 0);
 

  digitalWrite(laser, LOW);

  delay(delayLaserOff);
  
  digitalWrite(yellow, LOW);
  digitalWrite(black, HIGH);
  digitalWrite(orange, LOW);
  digitalWrite(brown, LOW);

  delay(delayMotor);

  digitalWrite(laser, HIGH);

  delay(delayLaser);

  while (analogRead(sensor2) <= 500) {
    analogWrite(speak, note2);
    Serial.println("2 ON");
    Serial.println(analogRead(sensor2));
  }
    analogWrite(speak, 0);

  digitalWrite(laser, LOW);

  delay(delayLaserOff);

  digitalWrite(yellow, LOW);
  digitalWrite(black, LOW);
  digitalWrite(orange, HIGH);
  digitalWrite(brown, LOW);

  delay(delayMotor);

  digitalWrite(laser, HIGH);

  delay(delayLaser);
  
  while (analogRead(sensor3) <= 500) {
    analogWrite(speak, note3);
    Serial.println("3 ON");
    Serial.println(analogRead(sensor3));
  }
    analogWrite(speak, 0);

  digitalWrite(laser, LOW);

  delay(delayLaserOff);
  
  digitalWrite(yellow, LOW);
  digitalWrite(black, LOW);
  digitalWrite(orange, LOW);
  digitalWrite(brown, HIGH);

  delay(delayMotor);

  digitalWrite(laser, HIGH);

  delay(delayLaser);

  while (analogRead(sensor4) <= 500) {
    analogWrite(speak, note4);
    Serial.println("4 ON");
    Serial.println(analogRead(sensor4));
  }
    analogWrite(speak, 0);

  digitalWrite(laser, LOW);

  delay(delayLaserOff);
  
  digitalWrite(yellow, LOW);
  digitalWrite(black, LOW);
  digitalWrite(orange, HIGH);
  digitalWrite(brown, LOW);

  delay(delayMotor);

  digitalWrite(laser, HIGH);
  
  delay(delayLaser);

  while (analogRead(sensor3) <= 500) {
    analogWrite(speak, note3);
    Serial.println("3 ON");
    Serial.println(analogRead(sensor3));
  }
  
    analogWrite(speak, 0);

  digitalWrite(laser, LOW);
  
  delay(delayLaserOff);

  digitalWrite(yellow, LOW);
  digitalWrite(black, HIGH);
  digitalWrite(orange, LOW);
  digitalWrite(brown, LOW);

  delay(delayMotor);

  digitalWrite(laser, HIGH);

  delay(delayLaser);

  while (analogRead(sensor2) <= 500) {
    analogWrite(speak, note2);
    Serial.println("2 ON");
    Serial.println(analogRead(sensor2));
  }
  
    analogWrite(speak, 0);

  digitalWrite(laser, LOW);

  delay(delayLaserOff);
  
  digitalWrite(yellow, HIGH);
  digitalWrite(black, LOW);
  digitalWrite(orange, LOW);
  digitalWrite(brown, LOW);
} 
