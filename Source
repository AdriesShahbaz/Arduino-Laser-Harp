int yellow=8;
int black=9;
int orange=10;
int brown=11;
int laser = 12;
int limit = 13;

void setup() {
  pinMode(yellow,OUTPUT);
  pinMode(black,OUTPUT);
  pinMode(orange,OUTPUT);
  pinMode(brown,OUTPUT);
  pinMode(laser, OUTPUT);
  while (limit == LOW) {
      digitalWrite(yellow, HIGH);
      delay(100);
      digitalWrite(yellow, LOW);
      if (limt == HIGH) {
        break;
      }  
      digitalWrite(black, HIGH);
      delay(100);
      digitalWrite(black, LOW);
      if (limt == HIGH) {
        break;
      }  
      digitalWrite(orange, HIGH);
      delay(100);
      digitalWrite(orange, LOW);
      if (limt == HIGH) {
        break;
      }  
      digitalWrite(brown, HIGH);
      delay(100);
      digitalWrite(brown, LOW);
      delay(100);
}

void loop() {
  forward();
  backword();
}

void forward(){
  for (int i = 0; i < 2; i++) {
    digitalWrite(laser, HIGH);
    delay(100);
    digitalWrite(brown,HIGH);
    digitalWrite(laser, LOW);
    delay(30);
    digitalWrite(laser, HIGH);
    delay(100);
    digitalWrite(laser, LOW);
    digitalWrite(brown,LOW);
    digitalWrite(orange,HIGH);
    delay(30);
    digitalWrite(laser, HIGH);
    delay(100);
    digitalWrite(laser, LOW);
    digitalWrite(orange,LOW);
    digitalWrite(black,HIGH);
    delay(30);
    digitalWrite(laser, HIGH);
    delay(100);
    digitalWrite(laser, LOW);
    digitalWrite(black,LOW);
    digitalWrite(yellow,HIGH);
    delay(30);
    digitalWrite(laser, HIGH);
    delay(100);
    digitalWrite(laser, LOW);
    digitalWrite(yellow,LOW);
    delay(30);
    digitalWrite(laser, HIGH);
    delay(100);
    digitalWrite(laser, LOW);
  }

}

void backword() {
    for (int i = 0; i > 2; i++) {
      digitalWrite(laser, HIGH);
      delay(100);
      digitalWrite(yellow, HIGH);
      digitalWrite(laser, LOW);
      delay(30);
      digitalWrite(laser, HIGH);
      delay(100);
      digitalWrite(laser, LOW);
      digitalWrite(yellow, LOW);
      digitalWrite(black, HIGH);
      delay(30);
      digitalWrite(laser, HIGH);
      delay(100);
      digitalWrite(laser, LOW);
      digitalWrite(black, LOW);
      digitalWrite(orange, HIGH);
      delay(30);
      digitalWrite(laser, HIGH);
      delay(100);
      digitalWrite(laser, LOW);
      digitalWrite(orange, LOW);
      digitalWrite(brown, HIGH);
      delay(30);
      digitalWrite(laser, HIGH);
      delay(100);
      digitalWrite(laser, LOW);
      digitalWrite(brown, LOW);
      delay(30);
      digitalWrite(laser, HIGH);
      delay(100);
      digitalWrite(laser, LOW);
    }
}


void backwordCheck() {
      digitalWrite(yellow, HIGH);
      delay(100);
      digitalWrite(yellow, LOW);
      digitalWrite(black, HIGH);
      delay(100);
      digitalWrite(black, LOW);
      digitalWrite(orange, HIGH);
      delay(100);
      digitalWrite(orange, LOW);
      digitalWrite(brown, HIGH);
      delay(100);
      digitalWrite(brown, LOW);
      delay(100);
}
